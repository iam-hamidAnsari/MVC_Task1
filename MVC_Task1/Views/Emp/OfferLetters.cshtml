@model IEnumerable<Emp>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">View</th>
            <th scope="col">Download</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <th scope="row">@m.Id</th>
                <td>@m.Name</td>
                <td>
                    <a href="@Url.Content(m.offer_letter)" target="_blank">
                        <i class="fas fa-eye"></i> View Offer Letter
                    </a>
                </td>
                <td>
                    <a href="@Url.Content(m.offer_letter)" download="Offer_Letter.pdf">
                        <i class="fas fa-download"></i> Download Offer Letter
                    </a>
                </td>
            </tr>

        }
       
    </tbody>
</table>



